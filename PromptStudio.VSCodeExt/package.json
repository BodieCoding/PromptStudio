{
  "name": "promptstudio-vscode",
  "displayName": "PromptStudio for VS Code",
  "description": "Manage and execute AI prompts directly in VS Code with GitHub Copilot integration",
  "version": "1.0.2",
  "publisher": "promptstudio",
  "repository": {
    "type": "git",
    "url": "https://github.com/promptstudio/promptstudio-vscode.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "prompts",
    "github copilot",
    "templates",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "promptstudio",
        "name": "promptstudio",
        "description": "Execute and manage PromptStudio templates",
        "isSticky": true,
        "commands": [
          {
            "name": "list",
            "description": "List available prompt templates"
          },
          {
            "name": "execute",
            "description": "Execute a prompt template with variables"
          },
          {
            "name": "search",
            "description": "Search for prompt templates"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "promptstudio.openWebview",
        "title": "Open PromptStudio",
        "category": "PromptStudio",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "promptstudio.createPrompt",
        "title": "Create New Prompt",
        "category": "PromptStudio",
        "icon": "$(add)"
      },
      {
        "command": "promptstudio.executePrompt",
        "title": "Execute Prompt with Copilot",
        "category": "PromptStudio",
        "icon": "$(play)"
      },
      {
        "command": "promptstudio.refreshPrompts",
        "title": "Refresh Prompts",
        "category": "PromptStudio",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "promptstudio": [
        {
          "id": "promptstudio.promptsView",
          "name": "Prompts",
          "when": "promptstudio.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptstudio",
          "title": "PromptStudio",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "configuration": {
      "title": "PromptStudio",      "properties": {        "promptstudio.mcpServerPath": {
          "type": "string",
          "default": "c:\\Code\\Promptlet\\dist\\PromptStudioMcpServer.exe",
          "description": "Path to the PromptStudio MCP server executable"
        },
        "promptstudio.enableCopilotIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable GitHub Copilot integration for prompt execution"
        },
        "promptstudio.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh prompts when changes are detected"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "promptstudio.refreshPrompts",
          "when": "view == promptstudio.promptsView",
          "group": "navigation"
        },
        {
          "command": "promptstudio.createPrompt",
          "when": "view == promptstudio.promptsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "promptstudio.executePrompt",
          "when": "view == promptstudio.promptsView && viewItem == prompt",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "promptstudio.openWebview",
          "when": "promptstudio.enabled"
        },
        {
          "command": "promptstudio.createPrompt",
          "when": "promptstudio.enabled"
        },
        {
          "command": "promptstudio.executePrompt",
          "when": "promptstudio.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "vsce": "^2.15.0"  },
  "dependencies": {}
}
