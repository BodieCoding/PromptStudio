@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Collection";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Delete Collection
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> This action cannot be undone. All prompts in this collection will also be deleted.
                    </div>
                    
                    <h6>Are you sure you want to delete this collection?</h6>
                    
                    <div class="bg-light p-3 rounded mb-3">
                        <h6>@Model.Collection.Name</h6>
                        @if (!string.IsNullOrEmpty(Model.Collection.Description))
                        {
                            <p class="mb-0 text-muted">@Model.Collection.Description</p>
                        }
                        
                        @if (Model.Collection.PromptTemplates.Any())
                        {
                            <hr>
                            <strong>This collection contains @Model.Collection.PromptTemplates.Count prompt(s):</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var prompt in Model.Collection.PromptTemplates)
                                {
                                    <li>@prompt.Name</li>
                                }
                            </ul>
                        }
                    </div>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Collection.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Yes, Delete Collection
                            </button>
                            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
